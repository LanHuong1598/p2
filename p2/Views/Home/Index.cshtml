<body>
    

  
    <form method="POST" name="frmXettuyen" enctype="multipart/form-data" action="/Home/Index">

        <div class="page-wrapper bg-gra-02 p-t-130 p-b-20 font-robo">
            <div class="wrapper wrapper--w680">
                <div class="card card-4">
                   
                    <h1 class="title1">ĐĂNG NHẬP</h1>
                    <div class="card-body">
                        <div class="input-group">
                            <div class="input-group-logo">
                                <img src="~/Content/img/logo.jpg" width="200" height="200">
                            </div>
                        </div>
                        <br />
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                        <div class="input-group">
                            <div class="input-group">
                                <label class="label">Số CMND/CCCD</label>
                                <input class="input--style-4" type="text" name="id" placeholder="" required>
                            </div>
                        </div>
                        <div class="input-group">
                            <div class="input-group">
                                <label class="label">Mật khẩu</label>
                                <input class="input--style-4" type="password" name="password" placeholder="" required>
                            </div>
                        </div>


                        <br>
                        <div class="input-group center">
                            <div class="input-group">
                                <div class="p-t-15">
                                    <button class="btn btn--radius-2 btn--blue" type="submit" name="butDangnhap">Đăng nhập</button>
                                </div>
                            </div>
                        </div>

                        <div class="row row-space">
                            <div class="col-2">
                                <div class="input-group">
                                    <label class="label"><a class="alink" href="/Home/Register">Đăng ký tài khoản</a></label>
                                </div>
                            </div>
