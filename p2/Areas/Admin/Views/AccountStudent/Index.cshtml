
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="app-main__inner">
    <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
        <div class="main-card mb-3 card">
            <div class="card-body">
                <h2>Danh sách tài khoản đăng nhập của thí sinh</h2>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th id="th_" style="text-align:center">STT</th>
                            <th id="th_" style="text-align:center">Tên tài khoản</th>
                            <th id="th_" style="text-align:center">Họ và tên</th>
                            <th id="th_">Địa chỉ</th>
                            <th id="th_">Số điện thoại</th>
                            <th id="th_">Email</th>
                            <th id="th_" style="text-align:center">Công cụ</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 0;
                            foreach (var item in ViewBag.ListUser)
                            {
                                i = i + 1;
                                <tr>
                                    <td id="td_">@i</td>
                                    <td id="td_">@item.username </td>
                                    <td id="td_">@item.name </td>
                                    <td id="td_">@item.address </td>
                                    <td id="td_">@item.phone </td>
                                    <td id="td_">@item.email </td>
                                    <td id="td_">
                                        <a class="pe-7s-info" href="DetailAccountStudent?code=@item.code"></a>
                                        <a class="pe-7s-trash" href="#"></a>

                                    </td>
                                </tr>
                            }
                        }
                    </tbody>

                    <tfoot>
                        <tr>
                            <th id="th_" style="text-align:center">STT</th>
                            <th id="th_" style="text-align:center">Tên tài khoản</th>
                            <th id="th_" style="text-align:center">Họ và tên</th>
                            <th id="th_">Địa chỉ</th>
                            <th id="th_">Số điện thoại</th>
                            <th id="th_">Email</th>
                            <th id="th_" style="text-align:center">Công cụ</th>

                        </tr>
                    </tfoot>
                </table>
            </div>
            
        </div>
       
        </div>
    </div>
<style>
    #th_{
        text-align:center
    }
    #td_{
        text-align:center
    }
</style>