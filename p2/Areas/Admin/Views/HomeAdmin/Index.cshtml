
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}



@{
    Html.RenderAction("_PanelView", "HomeAdmin");
}

@{
    var stt = 0;
}

<script src="https://code.jquery.com/jquery-3.1.0.js"></script>
<script src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.3/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/fixedheader/3.1.5/js/dataTables.fixedHeader.min.js"></script>
<div class="row" style=" margin-left : 20px">



    <!-- ============================================================== -->
    <!-- data table  -->
    <!-- ============================================================== -->
    <div class="col-lg-12">
        <div class="main-card mb-3 card">
            <div class="card-header">

                Danh sách thí sinh đã nộp hồ sơ


            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="example" class="table table-striped table-bordered second"
                           style="width:100%">
                        <thead>
                            <tr>
                                <th style="text-align:center">STT</th>
                                <th>Họ tên</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th style="text-align:center">
                                    Hộ khẩu thường trú
                                </th>
                                <th>Khối xét tuyển</th>
                                <th>công cụ</th>

                            </tr>
                        </thead>
                        <tbody>
                            @{ var i = 0;}
                            @foreach (var item in ViewBag.Candidates)
                            {
                                i = i + 1;
                                <tr>
                                    <td>@i</td>
                                    <td>@item.name</td>
                                    <td>@item.date_of_birth</td>
                                    <td>@item.sex</td>
                                    <td style="text-align:center">@item.permanent_residence</td>
                                    <td>@item.admission_group</td>
                                    <td>
                                        <a class="info" href="#"><i class="fa fa-info-circle" title="Thông tin" style="color:#22a1be;"></i></a>
                                        <a href="#"><i class="fa fa-trash" title="Xóa" style="color:#22a1be;"></i></a>
                                    </td>
                                </tr>
                            }

                        </tbody>
                        <tfoot>
                            <tr>
                                <th>STT </th>
                                <th>Họ tên</th>
                                <th>Ngày sinh</th>
                                <th>Giới tính</th>
                                <th style="text-align:center">Hộ khẩu thường trú</th>
                                <th style="text-align:center">Khối xét tuyển</th>
                                <th>Công cụ </th>

                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
    <!-- ============================================================== -->
    <!-- end data table  -->
    <!-- ============================================================== -->

</div>

<script >

    $(document).ready(function () {
        var test = "1";
        var table = $('#example').DataTable({
            responsive: true,
            paging: true, // works with or without paging
            searching: false,
            columnDefs: [{
                searchable: false,
                orderable: false,
                targets: 0,
            }],
            order: [
                [1, 'asc']
            ],

        });
        new $.fn.dataTable.FixedHeader(table);

        table.on('order.dt search.dt', function () {
            table.column(0, {
                search: 'applied',
                order: 'applied'
            }).nodes().each(function (cell, i) {
                cell.innerHTML = i + 1;
            });
        }).draw();
    });


</script>
