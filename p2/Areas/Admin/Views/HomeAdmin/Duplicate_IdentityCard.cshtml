
@{
    ViewBag.Title = "Duplicate_IdentityCard";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="app-main__inner">
    <div class=""></div>
   
    <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
        <div class="main-card mb-3 card">
           
            <div class="card-body">
                <h2 style="margin-left:15px">Danh sách số chứng minh thư trùng</h2>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th style="text-align:center">STT</th>
                            <th style="text-align:center">Số CMND/CMT</th>
                            <th style="text-align:center">Số lượng trùng</th>

                            <th style="text-align:center">Công cụ</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{ 
                            var i = 0;
                            foreach(var item in ViewBag.Duplicates)
                            {
                                i = i + 1;
                        <tr>
                            <th id="_th">@i</th>
                            <th id="_th">@item.identity_card </th>
                            <th id="_th">@item.count_ </th>
                            <th id="_th">
                                <a class="pe-7s-info" href="/Admin/Student/ListStudentDuplicateIdentity?identity=@item.identity_card"></a>
                            </th>
                        </tr>
                            }
                        }
                    </tbody>

                    
                </table>
            </div>
        </div>
        </div>
    </div>
<style>
    #_th{
        text-align:center
    }
</style>
<script>
    var table = $('#example').DataTable({
        "columnDefs": [
            { "orderable": false, "targets": 0 }

        ]
    });
    new $.fn.dataTable.FixedHeader(table);

    table.on('order.dt search.dt', function () {
        table.column(0, {
            search: 'applied',
            order: 'applied'
        }).nodes().each(function (cell, i) {
            cell.innerHTML = i + 1;
        });
    }).draw();
</script>