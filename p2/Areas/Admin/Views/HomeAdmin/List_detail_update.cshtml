
@{
    ViewBag.Title = "List_detail_update";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="app-main__inner">

    <div class="tab-pane tabs-animation fade show active" id="tab-content-0" role="tabpanel">
        <div class="main-card mb-3 card">

            <div class="card-body">
                <h2>Danh sách cập nhật</h2>
                <table id="example" class="table table-striped table-bordered" style="width:100%">
                    <thead>
                        <tr>
                            <th style="text-align:center">STT</th>
                            <th style="text-align:center">Người cập nhật</th>
                            <th style="text-align:center">Địa chỉ IP</th>
                            <th style="text-align:center">Thời gian</th>
                            <th style="text-align:center">Hành động</th>


                            <th style="text-align:center">Công cụ</th>

                        </tr>
                    </thead>
                    <tbody>
                        @{
                            var i = 0;
                            foreach (var item in ViewBag.List_Detail_Update)
                            {
                                i = i + 1;
                                <tr>
                                    <td style="text-align:center">@i</td>
                                    <td style="text-align:center">@item.edit_by_user</td>
                                    <td style="text-align:center">@item.edit_by_ip</td>
                                    <td style="text-align:center">@item.edit_date</td>
                                    <td style="text-align:center">@item.action</td>

                                    <td style="text-align:center">
                                        <a class="pe-7s-trash" href="#"></a>
                                        <a class="pe-7s-info" href="/Admin/Student/DetailUpdateStudent?code=@item.code"></a>
                                    </td>
                                </tr>
                            }

                        }
                    </tbody>

                    <tfoot>
                        <tr>
                            <th style="text-align:center">STT</th>
                            <th style="text-align:center">Người cập nhật</th>
                            <th style="text-align:center">Địa chỉ IP</th>
                            <th style="text-align:center">Thời gian</th>
                            <th style="text-align:center">Hành động</th>


                            <th style="text-align:center">Công cụ</th>
                        </tr>
                    </tfoot>
                </table>
            </div>
        </div>
    </div>

</div>
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
 